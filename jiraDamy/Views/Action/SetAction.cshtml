@model ViewModel.UserActions
@{
    ViewBag.Title = "SetAction";
    Layout = "~/Views/Shared/_AuthorizedLayout.cshtml";
}

<h2>SetAction</h2>

@section Grid
 {
    @using (Html.BeginForm("SetAction", "Action", FormMethod.Post))
    {
        
<div>
    <label>Action Name</label>
    <div>@Html.TextBoxFor(x => x.ActionName)</div>
    @Html.ValidationMessageFor(x => x.ActionName)
</div>
<div>
    <label>Controller Name</label>
    <div>@Html.TextBoxFor(x => x.ControllerName)</div>
    @Html.ValidationMessageFor(x => x.ControllerName)
</div>
        <div>
            <label>Display Name</label>
            <div>@Html.TextBoxFor(x => x.DisplayName)</div>
            @Html.ValidationMessageFor(x => x.DisplayName)
        </div>
        <div>
            <label>Show In Side Bar</label>
            <div style="display:inline-block;margin-left:15px">@Html.CheckBoxFor(x => x.ShowInSideBar)</div>
        </div>
        <div class="mt-1">
            <label style="display:block;">Access Role To</label>
            <select id="Role" name="AccessRolls" class="select-2 col-lg-3" multiple>
                <option value="1">Admin</option>
                <option value="2">HR</option>
                <option value="3">User</option>

            </select>
        </div>
        <div>
            <button type="submit" class="btn btn-success" style="float: right;">Add</button>
        </div>
    }
}