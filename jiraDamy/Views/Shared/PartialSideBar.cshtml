@model List<ViewModel.UserActions>
<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar">
        <div class="sidebar-header">
            <h1  style="background-color:lightblue">@Html.ActionLink("TMS", "ShowHomePage", "Home")</h1>
        </div>

        @*<ul class="list-unstyled components">
            <li class="active">*@
                <ul style="list-style-type: none;padding-left:0px;background-color:lightsteelblue;height:600px">
                    @foreach (var item in Model)
                    {
                        if (item.ShowInSideBar == true)
                        {
                            <li>
                                <a>@Html.ActionLink(item.DisplayName.Trim(), item.ActionName.Trim(), item.ControllerName.Trim())</a>
                            </li>
                        }
                    }

                    <li>
                        <a>@Html.ActionLink("Log Out", "Logout", "Authentication")</a>
                    </li>
                </ul>
            @*</li>

        </ul>*@
    </nav>

</div>